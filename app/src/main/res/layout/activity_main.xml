<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/whole_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:clipChildren="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_light"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <Button
                android:id="@+id/customize_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="@string/customize" />

            <Button
                android:id="@+id/gallery_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="@string/gallery" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/temporary_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@color/primary_light"
            android:animateLayoutChanges="true"
            android:clipChildren="false">

            <Button
                android:id="@+id/temporary_button"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="@string/temporary"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/custom_snackbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@color/accent"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:visibility="gone"
            android:animateLayoutChanges="true"
            android:clipChildren="false">

            <com.skydoves.colorpickerpreference.ColorPickerView
                android:id="@+id/colorPickerView"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:palette="@drawable/palette"
                app:selector="@drawable/wheel" />

            <Button
                android:id="@+id/temporary_button_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:text="@string/done" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>