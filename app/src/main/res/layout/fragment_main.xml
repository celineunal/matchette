<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.matchette.matchette.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:padding="10dp"
    android:animateLayoutChanges="true"
    android:id="@+id/fragmentLayout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:padding="5dp"
        android:id="@+id/shirtLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/t_shirt"
            android:contentDescription="yolo1"
            android:id="@+id/shirt"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:padding="5dp"
        android:id="@+id/pantLayout">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pant"
            android:contentDescription="yolo2"
            android:id="@+id/pant"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:orientation="vertical"
        android:id="@+id/paddingLayout">
    </LinearLayout>


</LinearLayout>
